# Example .scaf.yaml configuration file
#
# New style: Use database-specific config blocks.
# The database determines the dialect automatically.

neo4j:
  uri: bolt://localhost:7687
  username: neo4j
  password: password
  # database: neo4j  # optional, for multi-database setups

# Generation settings (optional)
generate:
  # lang: go        # default: go
  # adapter: neogo  # inferred from neo4j
  # out: ./generated
  # package: db

