// Query functions for users package

fn GetUser(id: int) `
MATCH (u:User {id: $id})
RETURN u.id AS id, u.name AS name, u.email AS email
`

fn GetAllUsers() `
MATCH (u:User)
RETURN u.id AS id, u.name AS name
`

GetUser {
